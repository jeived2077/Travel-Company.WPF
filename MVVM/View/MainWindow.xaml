        <DiscreteObjectKeyFrame x:Key="IsEmployeeButtonVisibleKeyFrame"
                                Value="{Binding IsEmployeeButtonVisible}" />
    </Window.Resources>

    <Border CornerRadius="8">
        <Border.Background>
            <SolidColorBrush Color="{StaticResource Grey6}"
                             Opacity="0.3" />
        </Border.Background>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="36" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border x:Name="BorderTitleBar"
                    Grid.ColumnSpan="2"
                    Background="{StaticResource GlyphBrush}"
                    Margin="1 1 1 0"
                    CornerRadius="8,8,0,0"
                    MouseDown="BorderTitleBar_MouseDown">
                <DockPanel>
                    <!-- Title -->
                    <TextBlock Text="Travel Company"
                               FontFamily="/Resources/Fonts/#Roboto"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"
                               FontWeight="ExtraBold"
                               Foreground="{StaticResource Grey10Brush}" />
                    <!-- General Buttons-->
                    <DockPanel HorizontalAlignment="Right">
                        <ToggleButton Style="{StaticResource LanguageToggleButton}"
                                      Command="{Binding SwitchLocalizationCommand}"/>
                        <Button Template="{StaticResource MinimizeButton}"
                                Click="ButtonMinimize_Click" />
                        <Button Template="{StaticResource CloseButton}"
                                Click="ButtonClose_Click" />
                    </DockPanel>
                </DockPanel>
            </Border>

            <!-- Pages -->
            <Border x:Name="BorderPages"
                    Grid.Row="1"
                    Grid.Column="1"
                    Background="{StaticResource Grey4Brush}"
                    CornerRadius="0,0,8,8"
                    Margin="1 0 1 1">
                <ContentControl x:Name="MainContentControl"
                                Content="{Binding Path=Navigation.CurrentView}"
                                Focusable="False"/>
            </Border>


            <!-- Main Menu -->
            <Border x:Name="BorderMainMenu"
                    Grid.Row="1"
                    Grid.Column="0"
                    Background="{StaticResource ListBoxBackgroundBrush}"
                    CornerRadius="0,0,0,8"
                    Margin="0,0,0,1"
                    Visibility="{Binding Path=MainMenuVisibility}" >
                <ScrollViewer>
                    <StackPanel VerticalAlignment="Center"
                           
                            Margin="10">
                        <!-- Header -->
                        <TextBlock x:Name="PagesHeader"
                               Text="{lex:Loc}"
                               Style="{StaticResource MainMenuHeader}" />
                        <!-- Employees -->
                        <RadioButton Name="ButtonEmployees"
                                 GroupName="MainMenu"
                                 ToolTip="{lex:Loc Employees}"
                                 Template="{StaticResource MainMenuRadioButton}"
                                 Command="{Binding Path=NavigateToEmployeesCommand}"
                                 IsChecked="False"
                                 Margin="1"
                                 Visibility="{Binding Value, Source={StaticResource IsEmployeeButtonVisibleKeyFrame}}">
                            <RadioButton.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Path Fill="{StaticResource Primary4Brush}"
                                      Data="{StaticResource GeoPeople}"
                                      Width="24"
                                      Height="24" />
                                    <TextBlock Text="{lex:Loc Employees}"
                                           Style="{StaticResource MainMenuTitle}" />
                                </StackPanel>
                            </RadioButton.Content>
                        </RadioButton>
                        <RadioButton Name="ButtonReports"
                         GroupName="MainMenu"
                         ToolTip="{lex:Loc Reports}"
                         Template="{StaticResource MainMenuRadioButton}"
                         Command="{Binding Path=NavigateToReportsCommand}"
                         IsChecked="False"
                         Margin="1"
                         Visibility="{Binding Value, Source={StaticResource IsEmployeeButtonVisibleKeyFrame}}" Checked="ButtonReports_Checked">
                            <RadioButton.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Path Fill="{StaticResource Primary4Brush}"
                          Data="{StaticResource GeoReport}"
                          Width="24"
                          Height="24" />
                                    <TextBlock Text="{lex:Loc Reports}"
                               Style="{StaticResource MainMenuTitle}" />
                                </StackPanel>
                            </RadioButton.Content>
                        </RadioButton> 
                        <RadioButton Name="ButtonTourOperators"
                         GroupName="MainMenu"
                         ToolTip="{lex:Loc TourOperators}"
                         Template="{StaticResource MainMenuRadioButton}"
                         Command="{Binding Path=NavigateToTourOperatorsCommand}"
                         IsChecked="False"
                         Margin="1"
                         Visibility="{Binding Value, Source={StaticResource IsEmployeeButtonVisibleKeyFrame}}">
                            <RadioButton.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Path Fill="{StaticResource Primary4Brush}"
                          Data="{StaticResource GeoTourOperator}"
                          Width="24"
                          Height="24" />
                                    <TextBlock Text="{lex:Loc TourOperators}"
                               Style="{StaticResource MainMenuTitle}" />
                                </StackPanel>
                            </RadioButton.Content>
                        </RadioButton>

                        <!-- Clients -->
                        <RadioButton x:Name="ButtonClients"
                                         GroupName="MainMenu"
                                         ToolTip="{lex:Loc Clients}"
                                         Template="{StaticResource MainMenuRadioButton}"
                                         Command="{Binding Path=NavigateToClientsCommand}"
                                         IsChecked="False"
                                         Margin="1">
                            <RadioButton.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Path Fill="{StaticResource Primary4Brush}"
                                              Data="{StaticResource GeoEdit}"
                                              Width="24"
                                              Height="24" />
                                    <TextBlock Text="{lex:Loc Clients}"
                                                   Style="{StaticResource MainMenuTitle}" />
                                </StackPanel>
                            </RadioButton.Content>
                        </RadioButton>

                        <!-- Routes -->
                        <RadioButton x:Name="ButtonRoutes"
                                 GroupName="MainMenu"
                                 ToolTip="{lex:Loc Routes}"
                                 Template="{StaticResource MainMenuRadioButton}"
                                 IsChecked="False"
                                 Margin="1"
                                 Command="{Binding NavigateToRoutesCommand}">
                            <RadioButton.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Path Fill="{StaticResource Primary4Brush}"
                                      Data="{StaticResource GeoRoute}"
                                      Width="24"
                                      Height="24" />
                                    <TextBlock Text="{lex:Loc Routes}"
                                           Style="{StaticResource MainMenuTitle}" />
                                </StackPanel>
                            </RadioButton.Content>
                        </RadioButton>

                        <!-- Routes -->
                        <RadioButton x:Name="ButtonPayments"
                             GroupName="MainMenu"
                             ToolTip="{lex:Loc Routes}"
                             Template="{StaticResource MainMenuRadioButton}"
                             IsChecked="False"
                             Margin="1"
                             Command="{Binding NavigateToPaymentsCommand}">
                            <RadioButton.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Path Fill="{StaticResource Primary4Brush}"
                                  Data="{StaticResource GeoRoute}"
                                  Width="24"
                                  Height="24" />
                                    <TextBlock Text="{lex:Loc Payments}"
                                       Style="{StaticResource MainMenuTitle}" />
                                </StackPanel>
                            </RadioButton.Content>
                        </RadioButton>


                        <!-- Tourist Groups -->
                        <RadioButton x:Name="ButtonsTouristGroups"
                                 GroupName="MainMenu"
                                 ToolTip="{lex:Loc Groups}"
                                 Template="{StaticResource MainMenuRadioButton}"
                                 IsChecked="False"
                                 Margin="1"
                                 Command="{Binding NavigateToTouristGroupsCommand}">
                            <RadioButton.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Path Fill="{StaticResource Primary4Brush}"
                                      Data="{StaticResource GeoTouristGroup}"
                                      Width="24"
                                      Height="24" />
                                    <TextBlock Text="{lex:Loc Groups}"
                                           Style="{StaticResource MainMenuTitle}" />
                                </StackPanel>
                            </RadioButton.Content>
                        </RadioButton>

                        <!-- Penalties -->
                        <RadioButton x:Name="ButtonsPenalties"
                                 GroupName="MainMenu"
                                 ToolTip="{lex:Loc Penalties}"
                                 Template="{StaticResource MainMenuRadioButton}"
                                 IsChecked="False"
                                 Margin="1"
                                 Command="{Binding NavigateToPenaltiesCommand}">
                            <RadioButton.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Path Fill="{StaticResource Primary4Brush}"
                                      Data="{StaticResource GeoPenalty}"
                                      Width="24"
                                      Height="24" />
                                    <TextBlock Text="{lex:Loc Penalties}"
                                           Style="{StaticResource MainMenuTitle}" />
                                </StackPanel>
                            </RadioButton.Content>
                        </RadioButton>

                        <!-- Header -->
                        <TextBlock  x:Name="CatalogsHeader"
                                Text="{lex:Loc}"
                                Style="{StaticResource MainMenuHeader}" />
                        <!-- Countries -->
                        <RadioButton x:Name="ButtonsCountries"
                                 GroupName="MainMenu"
                                 ToolTip="{lex:Loc Countries}"
                                 Template="{StaticResource MainMenuRadioButton}"
                                 IsChecked="False"
                                 Margin="1"
                                 Command="{Binding NavigateToCountriesCommand}">
                            <RadioButton.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Path Fill="{StaticResource Primary4Brush}"
                                      Data="{StaticResource GeoCountries}"
                                      Width="24"
                                      Height="24" />
                                    <TextBlock Text="{lex:Loc Countries}"
                                           Style="{StaticResource MainMenuTitle}" />
                                </StackPanel>
                            </RadioButton.Content>
                        </RadioButton>

                        <!-- Streets -->
                        <RadioButton x:Name="ButtonsStreets"
                                 GroupName="MainMenu"
                                 ToolTip="{lex:Loc Streets}"
                                 Template="{StaticResource MainMenuRadioButton}"
                                 IsChecked="False"
                                 Margin="1"
                                 Command="{Binding NavigateToStreetsCommand}">
                            <RadioButton.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Path Fill="{StaticResource Primary4Brush}"
                                      Data="{StaticResource GeoStreet}"
                                      Width="24"
                                      Height="24" />
                                    <TextBlock Text="{lex:Loc Streets}"
                                           Style="{StaticResource MainMenuTitle}" />
                                </StackPanel>
                            </RadioButton.Content>
                        </RadioButton>

                        <!-- Hotels -->
                        <RadioButton x:Name="ButtonsHotels"
                                 GroupName="MainMenu"
                                 ToolTip="{lex:Loc Hotels}"
                                 Template="{StaticResource MainMenuRadioButton}"
                                 IsChecked="False"
                                 Margin="1"
                                 Command="{Binding NavigateToHotelsCommand}">
                            <RadioButton.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Path Fill="{StaticResource Primary4Brush}"
                                      Data="{StaticResource GeoHotel}"
                                      Width="24"
                                      Height="24" />
                                    <TextBlock Text="{lex:Loc Hotels}"
                                           Style="{StaticResource MainMenuTitle}" />
                                </StackPanel>
                            </RadioButton.Content>
                        </RadioButton>

                        <!-- Populated Places -->
                        <RadioButton x:Name="ButtonsPopulatedPlaces"
                                 GroupName="MainMenu"
                                 ToolTip="{lex:Loc Places}"
                                 Template="{StaticResource MainMenuRadioButton}"
                                 IsChecked="False"
                                 Margin="1"
                                 Command="{Binding NavigateToPopulatedPlacesCommand}">
                            <RadioButton.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Path Fill="{StaticResource Primary4Brush}"
                                      Data="{StaticResource GeoPlace}"
                                      Width="24"
                                      Height="24" />
                                    <TextBlock Text="{lex:Loc Places}"
                                           Style="{StaticResource MainMenuTitle}" />
                                </StackPanel>
                            </RadioButton.Content>
                        </RadioButton>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Border>
</Window>
