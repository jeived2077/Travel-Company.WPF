<UserControl x:Class="Travel_Company.WPF.MVVM.View.Catalogs.CatalogsUpdateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Travel_Company.WPF.MVVM.View.Catalogs"
             xmlns:component="clr-namespace:Travel_Company.WPF.Resources.Components"
             xmlns:catalogs="clr-namespace:Travel_Company.WPF.MVVM.ViewModel.Catalogs"
             d:DataContext="{d:DesignInstance Type=catalogs:CatalogsUpdateViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <component:CatalogItemForm State="Updating"
                                   RelayCommand="{Binding UpdateCommand}" />
    </Grid>
</UserControl>
