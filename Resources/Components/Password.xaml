<UserControl x:Class="Travel_Company.WPF.Resources.Components.Password"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Travel_Company.WPF.Resources.Components"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             lex:LocalizeDictionary.DesignCulture="ru-RU"
             lex:ResxLocalizationProvider.DefaultAssembly="Travel-Company.WPF"
             lex:ResxLocalizationProvider.DefaultDictionary="Strings"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <PasswordBox x:Name="ComponentPassword"
                     BorderBrush="Transparent"
                     VerticalContentAlignment="Center"
                     FontSize="12"
                     MaxLength="16" 
                     PasswordChanged="ComponentPassword_PasswordChanged" />
        <TextBlock x:Name="PasswordTextBlockPlaceholder"
                   Text="{lex:Loc}"
                   VerticalAlignment="Center"
                   Margin="12"
                   Foreground="{StaticResource Grey5Brush}"
                   IsHitTestVisible="False"
                   FontSize="14" />
    </Grid>
</UserControl>
