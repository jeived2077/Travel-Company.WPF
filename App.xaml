<Application x:Class="Travel_Company.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Travel_Company.WPF" xmlns:local1="clr-namespace:Travel_Company.WPF.MVVM.ViewModel.Reports">
    <Application.Resources>
        <ResourceDictionary>
            <local1:ReportTypeToVisibilityConverter x:Key="ReportTypeToVisibilityConverter" />

            <ResourceDictionary.MergedDictionaries>

                <!-- Views -->
                <ResourceDictionary Source="Resources/Templates/Views.xaml" />
                
                <!-- Styles -->
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />

                <!-- Control Templates -->
                <ResourceDictionary Source="Resources/Templates/Buttons/Control/CloseButton.xaml"/>
                <ResourceDictionary Source="Resources/Templates/Buttons/Control/MinimizeButton.xaml"/>
                <ResourceDictionary Source="Resources/Templates/Buttons/General/LogInButton.xaml"/>
                <ResourceDictionary Source="Resources/Templates/Buttons/General/MoveItemToLeftButton.xaml"/>
                <ResourceDictionary Source="Resources/Templates/Buttons/General/MoveItemToRightButton.xaml"/>
                <ResourceDictionary Source="Resources/Templates/RadioButtons/MainMenuButton.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />

                <!-- Цветовая палитра Primary Blue -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Blue.xaml" />

                <!-- Цветовая палитра Secondary Purple -->

                <!-- Стили для TextBox, PasswordBox и других элементов -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
        </ResourceDictionary>
        <Style x:Key="MainMenuHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="10,20,0,10" />
        </Style>
        <Style x:Key="MainMenuRadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Margin" Value="0,5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="Transparent">
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="MainMenuTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Margin" Value="10,0,0,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </Application.Resources>
</Application>
