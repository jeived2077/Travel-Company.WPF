<Application x:Class="Travel_Company.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Travel_Company.WPF" xmlns:local1="clr-namespace:Travel_Company.WPF.MVVM.ViewModel.Reports">
    <Application.Resources>
        <ResourceDictionary>
            <local1:ReportTypeToVisibilityConverter x:Key="ReportTypeToVisibilityConverter" />

            <ResourceDictionary.MergedDictionaries>

                <!-- Views -->
                <ResourceDictionary Source="Resources/Templates/Views.xaml" />
                
                <!-- Styles -->
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />

                <!-- Control Templates -->
                <ResourceDictionary Source="Resources/Templates/Buttons/Control/CloseButton.xaml"/>
                <ResourceDictionary Source="Resources/Templates/Buttons/Control/MinimizeButton.xaml"/>
                <ResourceDictionary Source="Resources/Templates/Buttons/General/LogInButton.xaml"/>
                <ResourceDictionary Source="Resources/Templates/Buttons/General/MoveItemToLeftButton.xaml"/>
                <ResourceDictionary Source="Resources/Templates/Buttons/General/MoveItemToRightButton.xaml"/>
                <ResourceDictionary Source="Resources/Templates/RadioButtons/MainMenuButton.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />

                <!-- Цветовая палитра Primary Blue -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.Blue.xaml" />

                <!-- Цветовая палитра Secondary Purple -->

                <!-- Стили для TextBox, PasswordBox и других элементов -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
